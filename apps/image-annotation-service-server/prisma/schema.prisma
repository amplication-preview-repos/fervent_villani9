datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Shape {
  attributes Json?
  createdAt  DateTime            @default(now())
  id         String              @id @default(cuid())
  image      Image?              @relation(fields: [imageId], references: [id])
  imageId    String?
  positionX  Int?
  positionY  Int?
  typeField  EnumShapeTypeField?
  updatedAt  DateTime            @updatedAt
  user       User?               @relation(fields: [userId], references: [id])
  userId     String?
}

model Comment {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  image     Image?   @relation(fields: [imageId], references: [id])
  imageId   String?
  positionX Int?
  positionY Int?
  text      String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Image {
  comments    Comment[]
  createdAt   DateTime  @default(now())
  description String?
  file        Json?
  id          String    @id @default(cuid())
  shapes      Shape[]
  title       String?
  updatedAt   DateTime  @updatedAt
}

model User {
  comments  Comment[]
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  shapes    Shape[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

enum EnumShapeTypeField {
  Option1
}
